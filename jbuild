(jbuild_version 1)
(executables
 ((names (ocamlot))
  (libraries (js_of_ocaml-lwt))
  (preprocess (pps (js_of_ocaml-ppx)))
  ))

(rule
 ((targets (ocamlot.js))
  (action
    (run ${bin:js_of_ocaml} --noruntime ${lib:js_of_ocaml-compiler:runtime.js}
         --source-map ${path:ocamlot.bc} -o ${@} --pretty))))

(alias
 ((name DEFAULT)
  (deps (ocamlot.js index.html))))
